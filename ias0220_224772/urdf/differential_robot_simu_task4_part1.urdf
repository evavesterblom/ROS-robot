<?xml version="1.0"?>
<robot name="IAS0220_Evgenia">

  <link name="base_footprint">
    <origin rpy="0 0 0" xyz="0 0 0"/>
  </link> 
  
  <link name="base_link">
    <origin rpy="0 0 0" xyz="0 0 0"/>
    <visual>
      <geometry>
        <cylinder length="0.02" radius="0.1"/>
        <box size="0.2 0.0001  0.08"/>
      </geometry>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.02" radius="0.1"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="100"/>
      <inertia ixx="0.253" iyy="0.253" izz="0.5" ixy="0"  ixz="0" iyz="0"/>
    </inertial>
  </link>
  
  <link name="left_wheel">
    <origin rpy="0 0 0" xyz="0 0 0"/>
    <visual>
      <geometry>
        <cylinder length="0.008" radius="0.04"/>
      </geometry>
      <material name="black_metal">
        <color rgba="0.1 0.1 0.1 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.008" radius="0.04"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="15"/>
      <inertia ixx="0.0061" iyy="0.0061" izz="0.012"  ixy="0"  ixz="0" iyz="0"/>
    </inertial>   
  </link>
  
  <link name="right_wheel">
    <origin rpy="0 0 0" xyz="0 0 0"/>
    <visual>
      <geometry>
        <cylinder length="0.008" radius="0.04"/>
      </geometry>
      <material name="black_metal">
        <color rgba="0.1 0.1 0.1 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.008" radius="0.04"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="15"/>
      <inertia ixx="0.0061" iyy="0.0061" izz="0.012" ixy="0"  ixz="0" iyz="0"/>
    </inertial>
  </link>
   
  <link name="head">
    <origin rpy="0 0 0" xyz="0 0 0"/>
    <visual>
      <geometry>
        <box size="0.02 0.02 0.02"/>
      </geometry>
      <material name="grey">
        <color rgba="0.75 0.75 0.75 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.02 0.02 0.02"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="20"/>
      <inertia ixx="0.0013" iyy="0.0013" izz="0.0013"  ixy="0"  ixz="0" iyz="0"/>
    </inertial>
  </link>
  
    <link name="passive_wheel_holder">
    <origin rpy="0 0 0" xyz="0 0 0"/>
    <visual>
      <geometry>
        <cylinder length="0.02" radius="0.01"/>
      </geometry>
      <material name="green">
        <color rgba="0 1 0 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.02" radius="0.01"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="20"/>
     <inertia ixx="0.0012" iyy="0.0012" izz="0.001"  ixy="0"  ixz="0" iyz="0"/>
    </inertial>
  </link>
  
   <link name="passive_wheel">
    <origin rpy="0 0 0" xyz="0 0 0"/>
    <visual>
      <geometry>
        <sphere radius="0.01"/>
      </geometry>
      <material name="green">
            <color rgba="0 1 0 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <sphere radius="0.01"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="20"/>
      <inertia ixx="0.0008"  iyy="0.0008" izz="0.0008"  ixy="0"  ixz="0" iyz="0"/>
    </inertial>
  </link>
  
  
  
  
  <joint name="base_to_footprint" type="fixed">
    <parent link="base_footprint"/>
    <child link="base_link"/>
    <origin rpy="0 0 0" xyz="0 0 0.04"/>
  </joint>
  
  <joint name="base_to_right_wheel" type="continuous">
    <parent link="base_link"/>
    <child link="left_wheel"/>
    <axis xyz="0 0 1"/>
    <origin rpy="-1.57 0 0" xyz="0 0.1 0"/>
    <limit effort="30" velocity="1.0" />
  </joint>
  
  <joint name="base_to_left_wheel" type="continuous">
    <parent link="base_link"/>
    <child link="right_wheel"/>
    <axis xyz="0 0 1"/>
    <origin rpy="1.57 0 0" xyz="0 -0.1 0"/>
    <limit effort="30" velocity="1.0" />
  </joint>
  
  <joint name="base_to_head" type="fixed">
    <parent link="base_link"/>
    <child link="head"/>
    <origin rpy="0 0 0" xyz="0.05 0 0.02"/>
  </joint>
  
  <joint name="base_to_wheel_holder" type="fixed">
    <parent link="base_link"/>
    <child link="passive_wheel_holder"/>
    <origin rpy="0 0 0" xyz="0.05 0 -0.02"/>
  </joint>
  
  <joint name="wheel_holder_to_wheel" type="fixed">
    <parent link="passive_wheel_holder"/>
    <child link="passive_wheel"/>
    <origin rpy="0 0 0" xyz="0 0 -0.01"/>
  </joint>








   <transmission name="base_to_right_wheel_trans">
    <type>transmission_interface/SimpleTransmission</type>
    <actuator name="motor_right">
      <mechanicalReduction>1</mechanicalReduction>
    </actuator>
    <joint name="base_to_right_wheel">
      <hardwareInterface>VelocityJointInterface</hardwareInterface>
    </joint>
  </transmission>

  <transmission name="base_to_left_wheel_trans">
    <type>transmission_interface/SimpleTransmission</type>
    <actuator name="motor_left">
      <mechanicalReduction>1</mechanicalReduction>
    </actuator>
    <joint name="base_to_left_wheel">
      <hardwareInterface>VelocityJointInterface</hardwareInterface>
    </joint>
  </transmission>

    <gazebo reference="passive_wheel">
      <mu1 value="200.0"/>
      <mu2 value="100.0"/>
      <kp value="10000000.0" />
      <kd value="1.0" />
      <material>Gazebo/Grey</material>
    </gazebo>

    <gazebo reference="left_wheel">
      <mu1 value="200.0"/>
      <mu2 value="100.0"/>
      <kp value="10000000.0" />
      <kd value="1.0" />
      <material>Gazebo/Red</material>
    </gazebo>

    <gazebo reference="right_wheel">
      <mu1 value="200.0"/>
      <mu2 value="100.0"/>
      <kp value="10000000.0" />
      <kd value="1.0" />
      <material>Gazebo/Red</material>
    </gazebo>

  <gazebo>
    <plugin name="gazebo_ros_control" filename="libgazebo_ros_control.so">
      <robotNamespace>/</robotNamespace>
    </plugin>
  </gazebo>
  
</robot>
